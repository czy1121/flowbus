<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/logs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:background="@android:color/holo_green_dark"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:text="state" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/foo_event"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:background="@android:color/holo_green_dark"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:text="FooEvent" />

        <TextView
            android:id="@+id/foo_float"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:background="@android:color/holo_green_dark"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:text="foo float" />

        <TextView
            android:id="@+id/foo_string"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:background="@android:color/holo_green_dark"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:text="foo string" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bar_event"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:background="@android:color/holo_green_dark"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:text="BarEvent" />

        <TextView
            android:id="@+id/bar_float"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:background="@android:color/holo_green_dark"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:text="bar float" />

        <TextView
            android:id="@+id/bar_string"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:background="@android:color/holo_green_dark"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:text="bar string" />

    </LinearLayout>

    <TextView
        android:id="@+id/second"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:background="@android:color/holo_green_dark"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:text="second" />
</LinearLayout>